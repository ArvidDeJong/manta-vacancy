{
    "name": "darvis/manta-vacancy",
    "description": "Vacancy module for Manta CMS",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Darvis",
            "email": "info@arvid.nl"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Darvis\\MantaVacancy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Darvis\\MantaVacancy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@install-manta-vacancy"
        ],
        "post-update-cmd": [
            "@install-manta-vacancy"
        ],
        "install-manta-vacancy": [
            "@php artisan manta-vacancy:install --migrate --no-interaction"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Darvis\\MantaVacancy\\VacancyServiceProvider"
            ]
        }
    }
}
